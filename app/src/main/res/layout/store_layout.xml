<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/store_tab_relative"
    android:padding="5sp"
    android:layout_marginTop="5sp"
    android:layout_marginBottom="5sp" >
        <TextView
            android:id="@+id/deal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="Deal Name"
            android:textColor="@color/colorText2"
            android:layout_marginLeft="8sp"
            android:layout_marginBottom="5sp"/>

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deal_name"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="3sp"
            android:text="Store Name"
            android:textColor="@color/colorText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Address"
            android:layout_below="@+id/store_name"
            android:textColor="@color/colorText"
            android:layout_marginLeft="8sp"
            android:layout_marginBottom="5sp"/>

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10sp"
            android:layout_marginRight="18sp"
            android:text="Distance"
            android:textColor="@color/colorText2"
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/popularity_bar"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance"
            android:layout_alignTop="@+id/store_name"
            android:layout_alignRight="@+id/distance"
            android:layout_marginTop="3sp"
            android:layout_marginRight="3sp"
            android:isIndicator="true"
            android:max="5"
            android:progressTint="@color/colorAccent2"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:secondaryProgressTint="@color/colorAccent2" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popularity_bar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6sp"
            android:layout_marginEnd="18sp"
            android:layout_marginRight="18sp"
            android:layout_marginBottom="2sp"
            android:text="$$$"
            android:textColor="@color/colorText"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="@color/colorText2"
            android:layout_below="@+id/price"
            android:layout_marginTop="5sp"/>
</RelativeLayout>